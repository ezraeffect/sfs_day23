<Window x:Class="day_23.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:day_23"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="컬럼 자동 생성">
                <Grid>
                    <!-- 기본적인 DataGrid -->
                    <DataGrid x:Name="myDataGrid" AutoGenerateColumns="True"/>
                </Grid>
            </TabItem>
            <TabItem Header="컬럼 수동 생성 Datagrid">
                <Grid>
                    <!-- 컬럼 수동 생성 DataGrid -->
                    <DataGrid x:Name="myDataGrid2" AutoGenerateColumns="False" CanUserAddRows="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="아이디" IsReadOnly="True" Width="Auto" Binding="{Binding Id}"/>
                            <DataGridTextColumn Header="이름" Width="Auto" Binding="{Binding Name}"/>
                            <DataGridTextColumn Header="나이" Width="Auto" Binding="{Binding Age}"/>
                            <DataGridCheckBoxColumn Header="활성" Width="Auto" Binding="{Binding IsActive}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
            <TabItem Header="DataGrid 선택">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="단일 선택 DataGrid" FontSize="20" Margin="0, 0, 0, 5"/>
                    <DataGrid Grid.Row="1" Grid.Column="0" x:Name="singleSelectDataGrid" AutoGenerateColumns="True" SelectionMode="Single" SelectionUnit="FullRow" IsReadOnly="True" Margin="0, 0, 10, 0" SelectionChanged="singleSelectDataGrid_SelectionChanged"/>
                    <StackPanel Grid.Row="1" Grid.Column="1">
                        <Button x:Name="ShowSingleItem" Content="단일 선택 항목 정보" Margin="5" Click="ShowSingleItem_Click"/>
                    </StackPanel>
                    <Rectangle Grid.Row="2" Grid.ColumnSpan="2" Height="1" Fill="Beige" Margin="0, 20"/>
                    <TextBlock Grid.Row="3" Grid.Column="0" Text="다중 선택 DataGrid" FontSize="20" Margin="0, 0, 0, 5"/>
                    <DataGrid x:Name="multiSelectedDataGrid" Grid.Row="4" Grid.ColumnSpan="1" SelectionMode="Extended" SelectionUnit="FullRow" Margin="0,0,10,0" SelectionChanged="multiSelectedDataGrid_SelectionChanged"/>
                    <StackPanel Grid.Row="4" Grid.Column="2">
                        <Button x:Name="ShowMultiItem" Content="다중 선택 항목 정보" Margin="5" Click="ShowMultiItem_Click"/>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
