<Window x:Class="day_23.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:day_23"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <DataGrid x:Name="csvDataGrid" Grid.Row="0" Grid.ColumnSpan="3" Margin="5" AutoGenerateColumns="False" CanUserAddRows="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="이름" Width="Auto" Binding="{Binding Name}"/>
                    <DataGridTextColumn Header="나이" Width="Auto" Binding="{Binding Age}"/>
                    <DataGridTextColumn Header="설명" Width="Auto" Binding="{Binding Description}"/>
                </DataGrid.Columns>
            </DataGrid>
            <Label x:Name="filePathLabel" Grid.Row="1" Grid.Column="0" Content="파일을 선택해주세요." VerticalContentAlignment="Center"/>
            <Button x:Name="openFileButton" Grid.Row="1" Grid.Column="1" Content="File Open" Margin="5" Click="openFileButton_Click"/>
            <Button x:Name="getDataButton" Grid.Row="1" Grid.Column="2" Content="Get Data" Margin="5" Click="getDataButton_Click"/>
        </Grid>
    </Grid>
</Window>
